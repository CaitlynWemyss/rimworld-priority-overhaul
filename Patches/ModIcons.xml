<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Allow Tool</li>
    </mods>
    <match Class="PatchOperationSequence"><operations>

        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/WorkTypeDef[defName="HaulingUrgent"]</xpath>
          <value>
            <li Class="PriorityOverhaul.IconPath">
              <path>PriorityOverhaul/AllowTool/haulurgent</path>
            </li>
          </value>
        </li>

        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/WorkTypeDef[defName="FinishingOff"]</xpath>
          <value>
            <li Class="PriorityOverhaul.IconPath">
              <path>PriorityOverhaul/AllowTool/finishoff</path>
            </li>
          </value>
        </li>

    </operations></match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Books Expanded</li>
    </mods>
    <match Class="PatchOperationAddModExtension">
      <xpath>Defs/WorkTypeDef[defName="VBE_Writing"]</xpath>
      <value>
        <li Class="PriorityOverhaul.IconPath">
          <path>PriorityOverhaul/VanillaExpanded/writing</path>
        </li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Genetics Expanded</li>
    </mods>
    <match Class="PatchOperationAddModExtension">
      <xpath>Defs/WorkTypeDef[defName="GR_Genetics"]</xpath>
      <value>
        <li Class="PriorityOverhaul.IconPath">
          <path>PriorityOverhaul/VanillaExpanded/genetics</path>
        </li>
      </value>
    </match>
  </Operation>

</Patch>
